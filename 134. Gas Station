class Solution {
public:
    int canCompleteCircuit(vector<int>& gas, vector<int>& cost) {
        int sum_gas=0;
        int sum_cost=0;
        for(int i=0;i<gas.size();i++)
        {
            sum_gas+=gas[i];
            sum_cost+=cost[i];
        }
        if(sum_cost>sum_gas)
            return -1;
        int ans=0,start=0;;
        for(int i=0;i<gas.size();i++)
        {
            ans+=gas[i]-cost[i];
            if(ans<0)
            {
                ans=0;
                start=i+1;
            }
        }
        return start;
    }
};
